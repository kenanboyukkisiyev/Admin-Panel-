@using Calena.Models;
@{
    ViewBag.Title = "Index";
}

    <!--Page Title-->
<section class="page-title" style="background-image:url(/Updates/images/background/2.jpg)">
    <div class="auto-container">
        <h1>What We Offer</h1>
        <ul class="bread-crumb clearfix">
            <li><a href="@Url.Action("index","home")">Home</a></li>
            <li class="active">Services</li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<!--Services Section Three-->
<section class="services-section-three">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Services Block Six-->
            @foreach (Service item in ViewBag.service)
            {
                <div class="services-block-six col-md-6 col-sm-6 col-xs-12">
                    <div class="inner-box">
                        <div class="icon-box">
                            <span class="@item.Icon "></span>
                        </div>
                        <h3><a href="#">@item.Name</a></h3>
                        <div class="text">@item.Desc</div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--End Services Section Three-->
<!--Subscribe Section-->
<section class="subscribe-section grey-bg">
    <div class="auto-container">
        <div class="inner-section">
            <div class="row clearfix">
                <div class="title-column col-md-4 col-sm-12 col-xs-12">
                    <h2>Subscribe to Newsletter</h2>
                </div>
                <div class="form-column col-md-8 col-sm-12 col-xs-12">

                    <!--Subscribe Section-->
                    <div class="subscribe-form">
                        <form method="post" action="http://t.commonsupport.com/calena/contact.html">
                            <div class="row clearfix">
                                <!--Column-->
                                <div class="column col-md-9 col-sm-12 col-xs-12">
                                    <div class="row clearfix">
                                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" name="name" value="" placeholder="Your Name" required>
                                        </div>
                                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                            <input type="email" name="email" value="" placeholder="Email address" required>
                                        </div>
                                    </div>
                                </div>
                                <!--Column-->
                                <div class="column col-md-3 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <button type="submit" class="theme-btn btn-style-one">subscribe</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!--End Subscribe Section-->
